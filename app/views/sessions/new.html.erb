<% provide(:title, "登录") %>
<h1>用户登陆</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
        <ul >
          <%= f.label "用户名/手机号" %>
          <%= f.text_field :phone %>
          <p> </p>
          <%= f.label "密码" %>
          <%= f.password_field :password %>
          <p> </p>
          <%= f.submit "登陆", class: "btn btn-primary" %>
        </ul>

    <% end %>
    <p> </p>
    <p>新用户? <%= link_to "去注册", signup_path %></p>
  </div>
</div>
